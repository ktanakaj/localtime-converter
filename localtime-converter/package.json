{
  "name": "localtime-converter",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "build": "npm run clean-app && browserify ./app/scripts/app.ts -p tsify -o ./app/bundle.js",
    "watch": "npm run clean-app && watchify --poll=true ./app/scripts/app.ts -p tsify -v -d -o ./app/bundle.js",
    "test": "NODE_ENV=test mocha --compilers ts:espower-typescript/guess --recursive ./test",
    "doc": "npm run clean-doc && typedoc ./app/scripts ./test --out ./out",
    "clean": "npm run clean-app & npm run clean-doc",
    "clean-app": "rm -f ./app/bundle.js",
    "clean-doc": "rm -rf ./out",
    "tslint": "tslint ./app/scripts ./test"
  },
  "author": "Koichi Tanaka",
  "license": "MIT",
  "dependencies": {
    "angular": "^1.5.8",
    "moment": "^2.17.0",
    "moment-timezone": "^0.5.9"
  },
  "devDependencies": {
    "@types/angular": "^1.5.20",
    "@types/browserify": "^12.0.30",
    "@types/mocha": "^2.2.33",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.2.32",
    "@types/power-assert": "^1.4.29",
    "browserify": "^13.1.1",
    "espower-typescript": "^6.0.1",
    "mocha": "^3.1.2",
    "power-assert": "^1.4.2",
    "tsify": "^2.0.3",
    "tslint": "^4.0.1",
    "typedoc": "^0.5.1",
    "typescript": "^2.0.10",
    "watchify": "^3.7.0"
  }
}
